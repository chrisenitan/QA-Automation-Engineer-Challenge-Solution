{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["services/*"],
      "@environment/*": ["environment/*"],
      "@data/*": ["data/*"],
      "@utils/*": ["utils/*"],
      "@root/*": ["/*"],
      "@globalTypes/*": ["types/index.ts"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["services/**/*.ts", "test/**/*.ts", "test/global-setup.js", "types/*.ts", "global.d.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
